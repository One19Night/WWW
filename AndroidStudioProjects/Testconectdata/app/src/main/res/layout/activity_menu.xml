<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MenuActivity"
    android:background="#eee3af">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarMenu"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#000000"
        app:title="Menu"
        app:titleTextColor="#f9f9f9">
    </android.support.v7.widget.Toolbar>

    <!--<include layout="@layout/toolbar_menu">    </include>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_nuocuong"
                android:layout_weight="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#123"
                android:text="Tên sản phẩm"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/tv_gianuocuong"
                android:layout_weight="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#123"
                android:text="Giá sản phẩm"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tv_dungtich"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#123"
                android:text="Dung tích"
                android:textSize="20sp"
                android:layout_marginRight="5dp"/>

    </LinearLayout>
    <ListView
        android:id="@+id/listviewMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>
</LinearLayout>